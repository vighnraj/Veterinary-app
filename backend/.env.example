# ============================================
# VetSaaS Backend Environment Configuration
# ============================================
# Copy this file to .env and update values
# Command: copy .env.example .env (Windows)
#          cp .env.example .env (Linux/Mac)
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MySQL is required. Options:
# 1. Local MySQL: mysql://root:yourpassword@localhost:3306/vet_saas
# 2. XAMPP: mysql://root:@localhost:3306/vet_saas (no password)
# 3. Cloud: Use your cloud MySQL connection string
DATABASE_URL="mysql://root:@localhost:3306/vet_saas"

# ============================================
# JWT CONFIGURATION (can use defaults for dev)
# ============================================
JWT_SECRET=vetsaas-dev-secret-key-2024
JWT_REFRESH_SECRET=vetsaas-dev-refresh-secret-2024
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# STRIPE (Optional - for payments)
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_BASIC_MONTHLY=price_basic_monthly_id
STRIPE_PRICE_BASIC_YEARLY=price_basic_yearly_id
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly_id
STRIPE_PRICE_PRO_YEARLY=price_pro_yearly_id
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly_id
STRIPE_PRICE_ENTERPRISE_YEARLY=price_enterprise_yearly_id

# ============================================
# EMAIL (Optional - for email features)
# ============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM="VetSaaS <noreply@vetsaas.com>"

# ============================================
# FILE UPLOAD
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./src/uploads

# ============================================
# APP URLs
# ============================================
FRONTEND_URL=http://localhost:8081
BACKEND_URL=http://localhost:3000

# ============================================
# OTHER
# ============================================
TRIAL_DAYS=14
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
